function getRandomColor() {
  var letters = '2334445555555666677788899AABCDE';
  var color = '#';
  for (var i = 0; i < 6; i++) {
    color += letters[Math.floor(Math.random() * letters.length)];
  }
  return color;
}
function bzaz(txt){
